@model Itanio.SessaoAoVivo.Dominio.Sessao
@{
    ViewBag.Title = "Home";
}

@section Styles {
    <link rel="stylesheet" href="@Url.Action("Tema")" />
}
<div class="sidebar-container">
    <nav class="navbar fundo" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="row">
                <div class="col-md-4">

                    <img src="~/content/logotipos/@Model.Logotipo.Nome">

                </div>
                <div class="col-md-8 text-center">
                    <h1>@Model.Nome</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>@Model.Descricao</h3>
            </div>
            <div class="col-md-9">
                <iframe style="width: 100%; height: 60vh" src="https://www.youtube.com/embed/@(Model.CodigoYouTube)?autoplay=1&autohide=1&controls=0&wmode=transparent&rel=0&showinfo=0 " frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="col-md-3">
                <p>Digite uma mensagem</p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.Label("Mensagem:", new { @class = "control-label col-md-2" })
                    @Html.TextArea("mensagem", new { @class = "form-control", id = "txt-mensagem", rows = 5 });
                    <button type="submit" class="btn btn-primary btn-sm">Enviar</button>
                }
            </div>
        </div>

    </div>
    <div class="rodape fundo">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h6>@Model.Rodape</h6>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>

        $(function () {
            $("form").on("submit", function (e) {
                e.preventDefault();
                $.post(SessaoAoVivo.api + "Home/EnviarMensagem",
                    $(this).serialize(),
                    function (data, status, xhr) {
                        SessaoAoVivo.App.toastr["success"]("Mensagem enviada!", "Aviso");
                    },
                    "text");
                $("#txt-mensagem").val("");
            });
        });
    </script>
}